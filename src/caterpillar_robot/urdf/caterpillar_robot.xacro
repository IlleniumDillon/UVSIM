    <xacro:sensor_d435i parent="tripod_link" use_nominal_extrinsics="$(arg use_nominal_extrinsics)">
        <origin xyz="0 0 0.06" rpy="0 0 0" />
    </xacro:sensor_d435i>
    
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.1" rpy="0 0 0"/>
    </joint>
    <joint name="plat_joint" type="fixed">
        <parent link="base_link"/>
        <child link="plat_link"/>
        <origin xyz="-0.055 0.0 0.07" rpy="0 0 0"/>
    </joint>
    <joint name="laser_joint" type="fixed">
        <parent link="plat_link"/>
        <child link="laser_link"/>
        <origin xyz="0.055 0.0 0.05" rpy="0 0 0"/>
    </joint>
    <joint name="tripod_joint" type="fixed">
        <parent link="plat_link"/>
        <child link="tripod_link"/>
        <origin xyz="-0.03 0.0 0.08" rpy="0 0 0"/>
    </joint>
