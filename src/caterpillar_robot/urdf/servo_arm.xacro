                    <remapping>set_servojoint:=${arm_name}_arm</remapping>
                </ros>
                <update_rate>10</update_rate>
                <joints>${robot_name}_${arm_name}_arm_joint</joints>
            </plugin>
        </gazebo>
        <gazebo>
