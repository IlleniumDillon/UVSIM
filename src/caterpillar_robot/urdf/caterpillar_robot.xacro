<?xml version="1.0"?>
<robot name="mycar" xmlns:xacro="http://wiki.ros.org/xacro">
    <xacro:arg name="use_nominal_extrinsics" default="false" />
    <xacro:include filename="$(find realsense2_description)/urdf/_d435i.urdf.xacro" />
    <xacro:property name="PI" value="3.1415926"/>
    <xacro:macro name="default_inertial" params="mass">
		<inertial>
			<mass value="1"/>
			<inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
		</inertial>
	</xacro:macro>
    <xacro:macro name="wheel_func" params="wheel_name radius length xyz rpy mu mu2" >
        <link name="${wheel_name}_link">
            <visual>
                <geometry>
                    <cylinder radius="${radius}" length="${length}" />
                </geometry>
                <origin xyz="0 0 0" rpy="${PI / 2} 0 0" />
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="${PI / 2} 0 0"/>
                <geometry>
                    <cylinder radius="${radius}" length="${length}" />
                </geometry>
                <!-- <surface>
                    <friction>
                        <ode mu="${mu}" mu2="${mu2}"/>
                    </friction>
                </surface> -->
            </collision>
            <xacro:default_inertial mass="0.3"/>
        </link>
        <joint name="${wheel_name}_joint" type="continuous">
            <parent link="base_link"/>
            <child link="${wheel_name}_link"/>
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <axis xyz="0 1 0" />
        </joint>
        <gazebo reference="${wheel_name}_link">
            <material>Gazebo/Gray</material>
        </gazebo>
    </xacro:macro>

    <link name="base_footprint"/>
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.300 0.120 0.065"/>
            </geometry>
            <material name="blue">
                <color rgba="0.1 0.1 1.0 0.5" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.300 0.120 0.065"/>
            </geometry>
            <material name="blue">
                <color rgba="0.1 0.1 1.0 0.5" />
            </material>
        </collision>
        <xacro:default_inertial mass="2"/>
    </link>
    <link name="plat_link"> 
        <visual>
            <origin xyz="0 0 0.0" rpy="0 0 0"/>
            <geometry>
                <box size="0.16 0.155 0.075"/>
            </geometry>
            <material name="blue">
                <color rgba="0.1 0.1 1.0 0.5" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.16 0.155 0.075"/>
            </geometry>
            <material name="blue">
                <color rgba="0.1 0.1 1.0 0.5" />
            </material>
        </collision>
        <xacro:default_inertial mass="0.02"/>
    </link>
    <link name="laser_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.03"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 0.5" /> 
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.03"/>
            </geometry>
                <material name="black">
                <color rgba="0.0 0.0 0.0 0.5" /> 
            </material>
        </collision>
        <xacro:default_inertial mass="0.01"/>
    </link>
    <link name="tripod_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.09" radius="0.035"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 0.5" /> 
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.09" radius="0.035"/>
            </geometry>
                <material name="black">
                <color rgba="0.0 0.0 0.0 0.5" /> 
            </material>
        </collision>
        <xacro:default_inertial mass="0.01"/>
    </link>
